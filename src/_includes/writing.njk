---
layout: base.njk
extraStyle:
  ["/style/writing.css", "https://unpkg.com/katex@latest/dist/katex.min.css"]
---

<h1 class="mb-4">{{ title }}</h1>
{% if page.date %}
<p class="font-sans">
  {{ page.date.toLocaleDateString("en-GB", {year: 'numeric', month: 'long'}) }}
</p>
{% endif %} {% backLink "writing", "writing" %} {% if content | toc %}

<div class="block desktop:hidden text-sm bg-flint-400 rounded-md px-8 py-2">
  <h2 class="mt-4">Contents</h2>
  {{ content | toc | safe}}
</div>

<nav class="side-nav opacity-75 text-sm hidden">
  <div class="side-nav-offset hidden desktop:block">
    <h2>Contents</h2>
    {{ content | toc | safe}}
    <a href="#top">Back to top</a>
  </div>
</nav>
{% endif %} {{ content | safe}}
<br />
<br />
